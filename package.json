{
    "name": "jwt-pizza-service",
    "description": "Backend service for making JWT pizzas",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "start": "cd src && node index.js",
        "test": "jest --coverage --coverageReporters=json-summary --coverageReporters=text",  
        "lint": "eslint src/**/*.js"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "\\.spec\\.js$"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/"
        ],
        "coverageThreshold": {
            "global": {
                "lines": 80
            }
        }
    },
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.9.7"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@playwright/test": "^1.58.1",
        "@types/node": "^25.2.0",
        "eslint": "^9.39.2",
        "jest": "^29.7.0"
    }
}
